    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        });

        // Smooth scrolling for navigation
        function scrollToSection(sectionId) {
            document.getElementById(sectionId).scrollIntoView({
                behavior: 'smooth'
            });
        }

        // Navigation link smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Games data
        const games = [
            { id: 'puzzle', title: 'Puzzle Master', category: 'puzzle', emoji: 'üß©', description: 'Challenge your mind with brain-teasing puzzles' },
            { id: 'platformer', title: 'Jump Quest', category: 'adventure', emoji: 'üèÉ', description: 'Platform adventure with exciting challenges' },
            { id: 'arcade', title: 'Space Shooter', category: 'arcade', emoji: 'üöÄ', description: 'Classic arcade action in space' },
            { id: 'memory', title: 'Memory Game', category: 'puzzle', emoji: 'üß†', description: 'Test and improve your memory skills' },
            { id: 'snake', title: 'Snake Classic', category: 'arcade', emoji: 'üêç', description: 'The timeless snake game reimagined' },
            { id: 'tetris', title: 'Block Puzzle', category: 'puzzle', emoji: 'üî≤', description: 'Arrange falling blocks to clear lines' },
            { id: 'racing', title: 'Speed Racer', category: 'arcade', emoji: 'üèéÔ∏è', description: 'High-speed racing action' },
            { id: 'rpg', title: 'Quest Adventure', category: 'adventure', emoji: '‚öîÔ∏è', description: 'Epic role-playing adventure' }
        ];

        // Populate games grid
        function populateGames(gamesToShow = games) {
            const gamesGrid = document.getElementById('games-grid');
            gamesGrid.innerHTML = '';
            
            gamesToShow.forEach(game => {
                const gameCard = document.createElement('div');
                gameCard.className = 'game-card p-6 rounded-xl shadow-lg card-hover cursor-pointer';
                gameCard.onclick = () => playGame(game.id);
                gameCard.innerHTML = `
                    <div class="w-full h-32 bg-gradient-to-br from-blue-400 to-purple-500 rounded-lg mb-4 flex items-center justify-center">
                        <span class="text-4xl">${game.emoji}</span>
                    </div>
                    <h3 class="font-semibold text-lg mb-2">${game.title}</h3>
                    <p class="text-gray-600 text-sm mb-4">${game.description}</p>
                    <button class="w-full bg-primary hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors">
                        Play Now
                    </button>
                `;
                gamesGrid.appendChild(gameCard);
            });
        }

        // Initialize games
        populateGames();

        // Game filtering
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Update active filter button
                document.querySelectorAll('.filter-btn').forEach(b => {
                    b.className = 'filter-btn bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300';
                });
                this.className = 'filter-btn bg-primary text-white px-4 py-2 rounded-lg';
                
                // Filter games
                const filter = this.dataset.filter;
                const filteredGames = filter === 'all' ? games : games.filter(game => game.category === filter);
                populateGames(filteredGames);
            });
        });

        // Game search
        document.getElementById('game-search').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const filteredGames = games.filter(game => 
                game.title.toLowerCase().includes(searchTerm) || 
                game.description.toLowerCase().includes(searchTerm)
            );
            populateGames(filteredGames);
        });

        // Game modal functionality
        let currentGame = null;

        function playGame(gameId) {
            const game = games.find(g => g.id === gameId);
            if (!game) return;
            
            currentGame = gameId;
            document.getElementById('game-title').textContent = game.title;
            document.getElementById('game-instructions').textContent = `Welcome to ${game.title}! ${game.description}`;
            document.getElementById('game-modal').classList.remove('hidden');
            
            // Initialize the game canvas
            const canvas = document.getElementById('game-canvas');
            const ctx = canvas.getContext('2d');
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = '#f3f4f6';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = '#374151';
            ctx.font = '24px Poppins';
            ctx.textAlign = 'center';
            ctx.fillText(`${game.emoji} ${game.title}`, canvas.width/2, canvas.height/2 - 20);
            ctx.font = '16px Poppins';
            ctx.fillText('Click "Start Game" to begin!', canvas.width/2, canvas.height/2 + 20);
        }

        function closeGameModal() {
            document.getElementById('game-modal').classList.add('hidden');
            currentGame = null;
        }

        function startCurrentGame() {
            if (!currentGame) return;
            
            const canvas = document.getElementById('game-canvas');
            const ctx = canvas.getContext('2d');
            
            // Simple demo game based on type
            switch(currentGame) {
                case 'snake':
                    startSnakeGame(ctx, canvas);
                    break;
                case 'memory':
                    startMemoryGame(ctx, canvas);
                    break;
                case 'puzzle':
                    startPuzzleGame(ctx, canvas);
                    break;
                default:
                    startGenericGame(ctx, canvas);
            }
        }

        // Simple Snake Game
        function startSnakeGame(ctx, canvas) {
            let snake = [{x: 200, y: 200}];
            let food = {x: 300, y: 300};
            let dx = 20, dy = 0;
            let score = 0;
            
            function gameLoop() {
                // Clear canvas
                ctx.fillStyle = '#1f2937';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                
                // Move snake
                const head = {x: snake[0].x + dx, y: snake[0].y + dy};
                snake.unshift(head);
                
                // Check food collision
                if (head.x === food.x && head.y === food.y) {
                    score += 10;
                    food = {
                        x: Math.floor(Math.random() * (canvas.width/20)) * 20,
                        y: Math.floor(Math.random() * (canvas.height/20)) * 20
                    };
                } else {
                    snake.pop();
                }
                
                // Check wall collision
                if (head.x < 0 || head.x >= canvas.width || head.y < 0 || head.y >= canvas.height) {
                    alert(`Game Over! Score: ${score}`);
                    return;
                }
                
                // Draw snake
                ctx.fillStyle = '#10b981';
                snake.forEach(segment => {
                    ctx.fillRect(segment.x, segment.y, 18, 18);
                });
                
                // Draw food
                ctx.fillStyle = '#ef4444';
                ctx.fillRect(food.x, food.y, 18, 18);
                
                // Draw score
                ctx.fillStyle = '#ffffff';
                ctx.font = '20px Poppins';
                ctx.textAlign = 'left';
                ctx.fillText(`Score: ${score}`, 10, 30);
                
                setTimeout(gameLoop, 150);
            }
            
            // Keyboard controls
            document.addEventListener('keydown', (e) => {
                switch(e.key) {
                    case 'ArrowUp': if (dy === 0) { dx = 0; dy = -20; } break;
                    case 'ArrowDown': if (dy === 0) { dx = 0; dy = 20; } break;
                    case 'ArrowLeft': if (dx === 0) { dx = -20; dy = 0; } break;
                    case 'ArrowRight': if (dx === 0) { dx = 20; dy = 0; } break;
                }
            });
            
            gameLoop();
        }

        // Simple Memory Game
        function startMemoryGame(ctx, canvas) {
            const colors = ['#ef4444', '#10b981', '#3b82f6', '#f59e0b', '#8b5cf6', '#ec4899'];
            let cards = [];
            let flippedCards = [];
            let matches = 0;
            
            // Create card pairs
            for (let i = 0; i < 6; i++) {
                cards.push({color: colors[i], flipped: false, matched: false});
                cards.push({color: colors[i], flipped: false, matched: false});
            }
            
            // Shuffle cards
            cards.sort(() => Math.random() - 0.5);
            
            // Position cards
            cards.forEach((card, index) => {
                card.x = (index % 4) * 140 + 50;
                card.y = Math.floor(index / 4) * 120 + 50;
            });
            
            function drawCards() {
                ctx.fillStyle = '#1f2937';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                
                cards.forEach(card => {
                    if (card.flipped || card.matched) {
                        ctx.fillStyle = card.color;
                    } else {
                        ctx.fillStyle = '#6b7280';
                    }
                    ctx.fillRect(card.x, card.y, 120, 100);
                    
                    ctx.strokeStyle = '#ffffff';
                    ctx.lineWidth = 2;
                    ctx.strokeRect(card.x, card.y, 120, 100);
                });
                
                ctx.fillStyle = '#ffffff';
                ctx.font = '20px Poppins';
                ctx.textAlign = 'left';
                ctx.fillText(`Matches: ${matches}/6`, 10, 30);
            }
            
            canvas.addEventListener('click', (e) => {
                const rect = canvas.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                cards.forEach(card => {
                    if (x >= card.x && x <= card.x + 120 && y >= card.y && y <= card.y + 100) {
                        if (!card.flipped && !card.matched && flippedCards.length < 2) {
                            card.flipped = true;
                            flippedCards.push(card);
                            
                            if (flippedCards.length === 2) {
                                setTimeout(() => {
                                    if (flippedCards[0].color === flippedCards[1].color) {
                                        flippedCards[0].matched = true;
                                        flippedCards[1].matched = true;
                                        matches++;
                                        if (matches === 6) {
                                            alert('Congratulations! You won!');
                                        }
                                    } else {
                                        flippedCards[0].flipped = false;
                                        flippedCards[1].flipped = false;
                                    }
                                    flippedCards = [];
                                    drawCards();
                                }, 1000);
                            }
                            drawCards();
                        }
                    }
                });
            });
            
            drawCards();
        }

        // Generic game placeholder
        function startGenericGame(ctx, canvas) {
            ctx.fillStyle = '#1f2937';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            ctx.fillStyle = '#ffffff';
            ctx.font = '24px Poppins';
            ctx.textAlign = 'center';
            ctx.fillText('üéÆ Game Started!', canvas.width/2, canvas.height/2 - 40);
            ctx.font = '16px Poppins';
            ctx.fillText('This is a demo game. Click anywhere to play!', canvas.width/2, canvas.height/2);
            ctx.fillText('More games coming soon!', canvas.width/2, canvas.height/2 + 40);
            
            canvas.addEventListener('click', () => {
                const colors = ['#ef4444', '#10b981', '#3b82f6', '#f59e0b', '#8b5cf6'];
                const randomColor = colors[Math.floor(Math.random() * colors.length)];
                
                ctx.fillStyle = randomColor;
                ctx.beginPath();
                ctx.arc(Math.random() * canvas.width, Math.random() * canvas.height, 20, 0, 2 * Math.PI);
                ctx.fill();
            });
        }

        function startPuzzleGame(ctx, canvas) {
            startGenericGame(ctx, canvas);
        }

