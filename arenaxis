        function greetUser() {
            const name = document.getElementById('name-input').value;
            const output = document.getElementById('greeting-output');
            if (name) {
                output.textContent = `Hello, ${name}! Welcome to JavaScript!`;
                output.style.color = '#6366f1';
            } else {
                output.textContent = 'Please enter your name first!';
                output.style.color = '#ef4444';
            }
        }

        function openTutorial(tutorialId) {
